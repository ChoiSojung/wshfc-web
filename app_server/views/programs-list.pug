extends layout

block content
  .row.banner
    .col-12
      h1=pageHeader.title
        small &nbsp;#{pageHeader.strapline}

  .row
    .col-12.col-md-8
      each program in programs
        .card
          .card-block
            h4
              a(href="/program")=program.name
              small &nbsp;
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
                i.fas.fa-star
              span.badge.badge-pill.badge-default.float-right= program.distance
            p.address=program.address
            .facilities
              span.badge.badge-warning=facility

    .col-12.col-md-4
      p.lead=sidebar
